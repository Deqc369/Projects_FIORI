<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified"
	xmlns="sap.m" controllerName="APP_BAJAS_3428.APP_BAJAS_3428.controller.Create" xmlns:html="http://www.w3.org/1999/xhtml" >
	<App>
		<pages>
			<Page title="Crear solicitud de Baja">
				
				<content>
					<f:SimpleForm id="form" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12"
						adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1"
						singleContainerFullSize="false">
						<f:content>
							<Label text="Tipo de solicitud" labelFor="tipo"/>
							<Select id="tipod" width="100%" items="{tipoSol>/}" >
								<core:Item key="{tipoSol>Descripcion}" text="{tipoSol>Descripcion}" />
							</Select>
							<Label text="Número de Placa" labelFor="placa"/>
							<Input id="txtPlaca" width="100%" placeholder="# Placa" type="Text" enabled="true" editable="true" name="Placa"/>
							<!--<SearchField id="placa" width="100%" showSearchButton="false" placeholder="# Placa"/>-->
							<Label text="Diagnostico de la baja" labelFor="dBaja"/>
							<Select id="genre" width="100%" forceSelection="true" items="{diagnosticos>/}" change="perdida">
								<core:Item key="{diagnosticos>Diagnostico}" text="{diagnosticos>Diagnostico}"/>
							</Select>
							<Label text="Documentacion" labelFor="fileUploader"/>
							<Button text="Adjuntar Archivos" type="Accept" press="abrir_adjuntos" class="sapUiSmallMarginEnd"/>
							<!--<u:FileUploader id="fileUploader" fileType="pdf" width="100%" name="myFileUpload" uploadUrl="upload/"-->
							<!--	tooltip="Upload your file to the local server" change="previewFile"/>-->
							<Label text="Foto de la placa" labelFor="fileUploader1"/>
							<u:FileUploader id="fileUploader1" fileType="png,jpg,jpeg,raw,bmp" width="100%" name="myFileUpload" uploadUrl="upload/"
								tooltip="Upload your file to the local server" change="previewFile"/>
							<Label text="Foto del equipo " labelFor="fileUploader3"/>
							<u:FileUploader id="fileUploader2" fileType="png,jpg,jpeg,raw,bmp" width="100%" name="myFileUpload" uploadUrl="upload/"
								tooltip="Upload your file to the local server" change="previewFile"/>
							<Label text="Numero de aviso sigma/Código del cliente" labelFor="diagnostico"/>
							<SearchField id="aviso" placeholder="# Aviso" width="100%" showSearchButton="false"/>
							<Label text="Interlocutor del diagnóstico " labelFor="city"/>
							<SearchField id="Interlocutor" width="100%" showSearchButton="false" placeholder="Interlocutor"/>
							<Label text="Aprobador de la baja " labelFor="city"/>
							<SearchField id="Aprobador" width="100%" showSearchButton="false" placeholder="Aprobador"/>
							<Label text="Carga Masiva de solicitudes" visible="{= !${device>/system/phone} }" labelFor="fileUploader3"/>
							<u:FileUploader id="fileUploaderExcel" fileType="xlsx" width="100%" name="myFileUpload" uploadUrl="upload/"
								tooltip="Upload your file to the local server" visible="{= !${device>/system/phone} }" change="handleExcelUpload"/>
							<Label/>
							<l:HorizontalLayout >
								<FlexBox  alignItems="Center" justifyContent="Center">
									<items>
										<Button text="Crear Solicitud" type="Accept" press="f_bucarPlaca" class="sapUiSmallMarginEnd"/>
										<Button text="Ejecutar Carga Masiva " visible="{= !${device>/system/phone} }" type="Accept" press="cargaMasiva" class="sapUiSmallMarginEnd"/>
										<Button visible="{= !${device>/system/phone} }" press="f_descargar_xslx" icon="sap-icon://sys-last-page" tooltip="descargar Formato" type="Accept"/>
									</items>
								</FlexBox>
							</l:HorizontalLayout>
						</f:content>
					</f:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>