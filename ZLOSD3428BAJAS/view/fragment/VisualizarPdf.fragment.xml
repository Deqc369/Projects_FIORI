<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog title="Visualizar imagen" class="sapUiContentPadding" showCloseButton="true" escapeHandler="true">
		<content>
				<ScrollContainer
		height="100%"
		width="100%"
		horizontal="true"
		vertical="true">
		<FlexBox direction="Column" renderType="Div" class="sapUiSmallMargin">
			<FlexBox>
				<Button text="Correctly Displayed" press="onCorrectPathClick"/>
				<Button text="Loading Error" press="onIncorrectPathClick"/>
			</FlexBox>
			<PDFViewer source="https://www.federaciondecafeteros.org/static/files/precio_cafe.pdf" title="{/Title}" height="{/Height}">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</PDFViewer>
		</FlexBox>
	</ScrollContainer>
				
		
		</content>
		<buttons>
			<Button id="cerrar" text="Cerrar" press="f_cerrarFragment" type="Reject"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>