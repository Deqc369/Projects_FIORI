<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog title="Motivo Cancelacion" class="sapUiContentPadding" showCloseButton="true" contentWidth="900px" escapeHandler="true">
		<content>
			<l:VerticalLayout id="vertical" width="100%">
						<Label text="Motivo Cancelacion"/>
		       <TextArea id="motCan" value="{/value}" showExceededText="false" maxLength="100" width="100%" valueState="{= ${/value}.length > 100 ? 'Warning' : 'None' }" valueLiveUpdate="true" />
				 
			</l:VerticalLayout>
		</content>
		<buttons>
		<Button  text="Aceptar" press="f_cancelar"/>
			<!-- <Button id="btn_cancelar" 	visible="{= !${device>/system/phone} }"  text="Cancelar Baja" press="onApproveDialog"/>
				comentado por Marisol Ocampo 16/06/2021 solo el nivel inicial puede cancelar !-->
		<Button id="btn_cerrar" text="Cerrar" press="f_cerrarFragment" type="Reject"/>
	
		
		</buttons>
	</Dialog>
</core:FragmentDefinition>